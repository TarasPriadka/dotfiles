[commit]
  verbose = true
	gpgsign = true
[core]
	pager = cat
  excludesfile = ~/.gitignore
[alias]
  aliases = !git config --get-regexp alias | sed -re 's/alias\\.(\\S*)\\s(.*)$/\\1 = \\2/g'
  # Display tree-like log, because default log is a painâ€¦
  lg = log --graph --date=relative --pretty=tformat:'%Cred%h%Creset -%C(auto)%d%Creset %s %Cgreen(%an %ad)%Creset'
  oops = commit --amend --no-edit
  # Edit last commit message
  reword = commit --amend
  # Undo last commit but keep changed files in stage
  uncommit = reset --soft HEAD~1
[user]
	name = Taras Priadka
	email = taraspriadka@gimletlabs.ai
[fetch]
    prune = true
    pruneTags = true
    all = true
[push]
    default = simple
    autoSetupRemote = true
    followTags = true
[pull]
    rebase = true
[rebase]
    autoSquash = true
    autoStash = true
    updateRefs = true
[branch]
    sort = -committerdate
[tag]
    sort = version:refname
[init]
    defaultBranch = main
[diff]
    algorithm = histogram
    colorMoved = plain
    mnemonicPrefix = true
    renames = true
[help]
    autocorrect = prompt
[rerere]
    enabled = true
    autoupdate = true
[log]
  abbrevCommit = true
[color "branch"]
  upstream = cyan
